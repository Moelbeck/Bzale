@{
    Layout = "_ManagementLayout.cshtml";
}
@model bzale.ViewModel.AccountUpdateDTO

<div class="row">
    <div class="col-md-8">
        <section>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.DisplayNameFor(e => e.FirstName)
                    @Html.TextBoxFor(e => e.FirstName)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.DisplayNameFor(e => e.LastName)
                    @Html.TextBoxFor(e => e.LastName)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.DisplayNameFor(e => e.Gender)
                    @Html.DropDownListFor(m => m.Gender, Html.GetEnumSelectList<bzale.Common.eGender>())
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.DisplayNameFor(e => e.Email)
                    @Html.TextBoxFor(e => e.Email)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.DisplayNameFor(e => e.Phone)
                    @Html.TextBoxFor(e => e.Phone)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.DisplayNameFor(e => e.Country)
                    @Html.TextBoxFor(e => e.Country)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.DisplayNameFor(e => e.PostalCode)
                    @Html.TextBoxFor(e => e.PostalCode)
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.DisplayNameFor(e => e.Address)
                    @Html.TextBoxFor(e => e.Address)
                </div>
            </div>
        </section>
    </div>
</div>
