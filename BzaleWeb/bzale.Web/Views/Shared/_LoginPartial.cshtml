@using bzale.Web.Model;
@if (CurrentUser.Email !=null)
{
    <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm">
        <ul class="nav navbar-nav navbar-right">
            @if (User.IsInRole("Admin")) {
            <li>
                <a asp-controller="Manage" asp-route-area="Admin" asp-action="Index" title="Manage">Admin</a>
            </li>
            }
            <li>
                <a asp-controller="Manage" asp-action="Index" title="Manage">Hello @CurrentUser.FirstName!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
            </li>
        </ul>
    </form>
}
else
{
    <div class="navbar-collapse collapse">

        <ul class="nav navbar-nav navbar-right">

            @Html.ActionLink("Login", "Login", "Account");
            @Html.ActionLink("Register", "Register", "Account");

        </ul>
        </div>
        }
