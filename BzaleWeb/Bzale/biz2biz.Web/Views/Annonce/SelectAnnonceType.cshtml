@using biz2biz.ViewModel
@using Kendo.Mvc.UI
@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "/Views/Shared/_MyAccount.cshtml";
}

<h2>Opret annonce</h2>

<div class="demo-section k-content">
    <h4>Hvad vil du sælge?</h4>
    @(Html.Kendo().AutoComplete()
          .Name("annoncetype")
          .DataTextField("ProductTypeName")
          .HtmlAttributes(new {style = "width:100%" })
          .Delay(1000)
          .DataSource(source =>
          {
              source.Custom()
                  .Group(g => g.Add("Grouping", typeof (string)));
              source.Read(read =>
              {
                  read.Action("AnnonceTypes_Read", "Annonce")
                      .Data("onAdditionalData");
              })
                  .ServerFiltering(true);
          })
          .Height(400)
          .HeaderTemplate("<div class=\"dropdown-header k-widget k-header\">" +
                          "<span>Kategori</span>" +
                          "<span>Info</span>" +
                          "</div>")
          .Template("<span class=\"k-state-default\" style=\"background-image: url(" + Url.Content("~/Images") + "#:data.ImageURL#" + ");\" ></span>" +
                    "<span class=\"k-state-default\"><h3>#: data.ProductTypeName #</h3><p>#: data.ManufacturerName #</p></span>")
          .Events(e =>
          {
              e.Select("onSelect");
          })
          )

    <div class="demo-hint">Hint: skriv en produkt kategori, produkt eller fabrikant </div>
</div>


<script>
    function onAdditionalData() {
        return {
            text: $("#annoncetype").val()
        };
    }
    function onSelect(e) {
        var dataItem = this.dataItem(e.item.index());


        $.ajax({
            type: "POST",
            url: '@Url.Action("SetAnnonceType", "Annonce")',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            data: JSON.stringify(dataItem),
            success: function (res) {
                window.location.href = '@Url.Action("NewAnnonce", "Annonce")?id=' + dataItem.ProductTypeID;

            },
            error: function(res) {
                if (res.responseText === "True") {
                    window.location.href = '@Url.Action("NewAnnonce", "Annonce")?id=' + dataItem.ProductTypeID;

                }
                else{
                    alert(res);
                }
            }
        });
    }
</script>

<style>
    .dropdown-header {
        border-width: 0 0 1px 0;
        text-transform: uppercase;
    }

        .dropdown-header > span {
            display: inline-block;
            padding: 10px;
        }

            .dropdown-header > span:first-child {
                width: 50px;
            }

    #annoncetype-list .k-item {
        line-height: 1em;
        min-width: 300px;
    }

    /* Material Theme padding adjustment*/

    .k-material #customers-list .k-item,
    .k-material #customers-list .k-item.k-state-hover,
    .k-materialblack #customers-list .k-item,
    .k-materialblack #customers-list .k-item.k-state-hover {
        padding-left: 5px;
        border-left: 0;
    }

    #annoncetype-list .k-item > span {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
        display: inline-block;
        vertical-align: top;
        margin: 20px 10px 10px 5px;
    }

        #annoncetype-list .k-item > span:first-child {
            -moz-box-shadow: inset 0 0 30px rgba(0,0,0,.3);
            -webkit-box-shadow: inset 0 0 30px rgba(0,0,0,.3);
            box-shadow: inset 0 0 30px rgba(0,0,0,.3);
            margin: 10px;
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-size: 100%;
            background-repeat: no-repeat;
        }

    #annoncetype-list h3 {
        font-size: 1.2em;
        font-weight: normal;
        margin: 0 0 1px 0;
        padding: 0;
    }

    #annoncetype-list p {
        margin: 0;
        padding: 0;
        font-size: .8em;
    }
</style>
