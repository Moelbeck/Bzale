@model biz2biz.ViewModel.AccountViewModels.AccountLoginViewModel

@{
    ViewBag.Title = "title";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Log ind ved hjælp af email eller CVR nummer</h2>

@using(Html.BeginForm("Login", "Account"))
{
    @Html.AntiForgeryToken() //This is for prevent CSRF attacks
                             
    @Html.ValidationSummary(true)
    if (@ViewBag.Message != null)
    {
        <div style="border: 1px solid red">
            @ViewBag.Message
        </div>
    }
    <table>
        <tr>
            <td>@Html.LabelFor(e => e.UserName)</td>
            <td>@Html.TextBoxFor(e => e.UserName)</td>
            <td>@Html.ValidationMessageFor(e => e.UserName)</td>
        </tr>
        <tr>
            <td>@Html.LabelFor(e => e.Password)</td>
            <td>@Html.PasswordFor(e => e.Password)</td>
            <td>@Html.ValidationMessageFor(e => e.Password)</td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" value="Login"/>
            </td>
            <td></td>
        </tr>
    </table>  
}
@*This line is for create javascript*@
@section Scripts{
   @Scripts.Render("~/bundles/jqueryval")
}